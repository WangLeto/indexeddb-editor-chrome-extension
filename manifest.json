{
  "manifest_version": 3,
  "name": "IndexedDB Editor",
  "version": "1.0.0",
  "description": "Chrome extension for editing IndexedDB content with single-item editing",

  "permissions": ["activeTab", "storage", "scripting"],

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "IndexedDB Editor"
  },

  "web_accessible_resources": [
    {
      "resources": ["editor.css", "highlight.min.js", "hljs-theme.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
